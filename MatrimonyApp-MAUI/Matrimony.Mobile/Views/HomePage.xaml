<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Matrimony.Mobile.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Matrimony.Mobile.ViewModels"
    x:DataType="viewmodels:HomeViewModel"
    Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="16"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalTextAlignment="Center"
                Text="Welcome to MatrimonyApp" />
            <Label
                FontSize="16"
                HorizontalTextAlignment="Center"
                Text="Your journey to finding a perfect match begins here." />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
